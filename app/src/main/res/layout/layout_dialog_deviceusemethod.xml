<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/MWidget.TextView.DeviceTitle"
        android:layout_marginTop="20dp"
        android:text="@string/device_usemethod"
        android:textSize="@dimen/text_size_28px"/>

    <View
        style="@style/MWidget.DivideHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:layout_marginLeft="@dimen/default_item_margin"
        android:layout_marginRight="@dimen/default_item_margin"
        android:layout_marginTop="8dp"></View>

    <TextView
        android:id="@+id/desc"
        style="@style/MWidget.TextView.OrderDetailSummary"
        android:layout_margin="@dimen/default_left_margin_16dp"
        android:lineSpacingExtra="1.5dp"/>
</LinearLayout>