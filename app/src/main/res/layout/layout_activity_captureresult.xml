<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        style="@style/MWidget.TextView.LoginTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:text="@string/success_add_device" />

    <ImageView
        android:id="@+id/iv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="80dp"
        android:maxWidth="120dp"
        android:src="@drawable/ic_success"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tip"
        style="@style/MWidget.TextView.AppTitle"
        android:layout_below="@+id/iv_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:lineSpacingExtra="8dp"
        android:gravity="center"
        android:singleLine="false"
        android:textSize="@dimen/text_size_24px"
        />

    <TextView
        android:id="@+id/complete"
        style="@style/MWidget.TextView.Button.Login"
        android:layout_width="@dimen/bg_button_reset_width"
        android:layout_below="@+id/tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/complete" />

    <include layout="@layout/layout_toolbar_custom_mine"></include>

</RelativeLayout>
