<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_no_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/text_no_content"
            style="@style/MListViewItemWidget.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:singleLine="false"
            android:text="@string/no_content"
            android:textColor="@color/dialog_btn_cancle"
            android:textSize="@dimen/text_size_24px" />

        <Button
            android:id="@+id/btn_reload"
            style="@style/MWidget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_no_content"
            android:layout_alignRight="@+id/text_no_content"
            android:layout_below="@id/text_no_content"
            android:layout_marginBottom="@dimen/view_default_margin"
            android:layout_marginTop="@dimen/fragment_margin_new"
            android:background="@drawable/bg_download_btn"
            android:textColor="@color/white"
            android:text="@string/btn_reload" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/btn_reload"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>