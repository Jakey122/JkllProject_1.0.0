<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_gift_dialog"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/MWidget.TextView.DeviceTitle"
                android:layout_marginTop="20dp"
                android:text="@string/success_pay"
                android:textSize="@dimen/text_size_28px" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/default_left_margin_16dp"
                android:src="@drawable/ic_success" />

            <TextView
                android:id="@+id/message"
                style="@style/MWidget.TextView.BlackSummary"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="@dimen/default_left_margin_16dp"
                android:singleLine="false"
                android:gravity="center"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_info"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/color_dialog_border"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="30dp">

                <View
                    android:id="@+id/divide2"
                    android:layout_width="@dimen/line"
                    android:layout_height="match_parent"
                    android:background="@color/color_dialog_border"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button2"
                    style="@style/MCustomDialogButton" />

                <View
                    android:id="@+id/divide3"
                    android:layout_width="@dimen/line"
                    android:layout_height="match_parent"
                    android:background="@color/color_dialog_border"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button1"
                    style="@style/MCustomDialogButton.Gift"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_button_login"
                    android:text="@string/btn_ok"
                    android:textColor="@color/colorPrimary"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/button3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_detail_close"
            android:visibility="visible" />

    </RelativeLayout>


</RelativeLayout>