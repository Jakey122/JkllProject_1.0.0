<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="15dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tip"
        style="@style/MWidget.TextView.AppSummary"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/deep_red"/>

    <EditText
        android:id="@+id/et_nickname"
        style="@style/MWidget.TextView.EditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/default_left_margin_16dp"
        android:layout_marginRight="@dimen/default_left_margin_16dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:hint="@string/mine_nickname_hint"
        android:maxLength="10"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/default_left_margin_16dp"
        android:layout_marginRight="@dimen/default_left_margin_16dp"></View>


</LinearLayout>